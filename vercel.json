{
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "web/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/.*", "dest": "api/index.py" },

    { "handle": "filesystem" },
    { "src": "/favicon.ico", "dest": "web/index.html" },
    { "src": "^(.*)$", "dest": "web/$1" },
    { "src": "/", "dest": "web/index.html" }
  ]
}
